
.search_cont {
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 70rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.search{
	height: 70rpx;
	line-height: 70rpx;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background-color: #C0C0C0;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
}
.search_img{
	margin: auto 0 auto 20rpx;
	width: 40rpx;
	height: 40rpx;
}
.search input{
	height: 70rpx;
	line-height: 70rpx;
	width: 100%;
	font-size: 25rpx;
	color: #666666;
}

